super + t
  wmctrl -a "kitty" || kitty --title "kitty"
super + e
  wmctrl -a code || code
  #$TERMINAL -e $EDITOR
super + b
  wmctrl -a chrome || google-chrome-stable
super + d
  wmctrl -a discord || discord

super + r
  rofi -show run  
super + w
  rofi -show window
super + {_,shift + }q
  bspc node -{c,k}
super + Escape
  pkill -usr1 -x sxhkd && bspc wm -r
super + s
  maim --select | xclip -selection clipboard -target image/png
super + Tab
	bspc node -f last
super + alt + Escape
  systemctl suspend
super + shift + r
  reboot
super + {_,shift + }{1-9,0}
  bspc {desktop --focus,node --to-desktop} {1-9,10}

super + o
  xdotool search --class "nvidia-settings" windowactivate --sync || nvidia-settings





